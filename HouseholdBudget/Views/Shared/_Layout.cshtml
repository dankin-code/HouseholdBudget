<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Daniel's Household Budget Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap Core CSS -->
    @Styles.Render("~Content/bower_components/bootstrap/dist/css/bootstrap.min.css")
    <!-- MetisMenu CSS -->
    @Styles.Render("~Content/bower_components/metisMenu/dist/metisMenu.min.css")
    @Styles.Render("~Content/dist/css/sb-admin-2.css")
    <!-- Custom Fonts -->
    @Styles.Render("~Content/bower_components/font-awesome/css/font-awesome.min.css")
    <!-- MetisMenu CSS -->
    @Styles.Render("~Content/bower_components/metisMenu/dist/metisMenu.min.css")
    <!-- Custom CSS -->
    @Styles.Render("~Content/dist/css/sb-admin-2.css")
    <!-- Morris Charts CSS -->
    @Styles.Render("~Content/bower_components/morrisjs/morris.css")



</head>
<body>
    <div class="container">
    <div row class="col-lg-12">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Daniel's Budget App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="nav navbar-top-links">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                    <li>@Html.ActionLink("Household", "Index", "Households")</li>
                    <li>@Html.ActionLink("Accounts", "Index", "Accounts")</li>
                    <li>@Html.ActionLink("Transactions", "Index", "Transactions")</li>
                    <li>@Html.ActionLink("Budget", "Index", "Budgets")</li>
                    <li>@Html.ActionLink("Budget Items", "Index", "BudgetItems")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            </nav>
        </div>
    </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Daniel's Household Budget Application</p>
            </footer>
        </div>

        @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@


        <!-- jQuery -->
        @Scripts.Render("~Content/bower_components/jquery/dist/jquery.min.js")
        <!-- Bootstrap Core JavaScript -->
        @Scripts.Render("~Content/bower_components/bootstrap/dist/js/bootstrap.min.js")
        <!-- Metis Menu Plugin JavaScript -->
        @Scripts.Render("~Content/bower_components/metisMenu/dist/metisMenu.min.js")
        <!-- Morris Charts JavaScript -->
        @Scripts.Render("~Content/bower_components/raphael/raphael-min.js")
        @Scripts.Render("~Content/bower_components/morrisjs/morris.min.js")
        @Scripts.Render("~Content/js/morris-data.js")
        <!-- Custom Theme JavaScript -->
        @Scripts.Render("~Content/dist/js/sb-admin-2.js")
        @Scripts.Render("~/Content/bower_components/datatables-responsive/js/dataTables.responsive.js")

        @RenderSection("scripts", required: false)
</body>
</html>
