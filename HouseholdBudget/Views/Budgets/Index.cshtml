@model IEnumerable<HouseholdBudget.Models.Budget>

@{
    
    ViewBag.Title = "Budget";
}

<h2>Budget</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BudgetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseholdId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BudgetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseholdId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }

    </table>
</div>
